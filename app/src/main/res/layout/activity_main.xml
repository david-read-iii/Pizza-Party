<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/activity_padding">

        <!-- "David Read" label. -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/my_name_label"
            android:textSize="@dimen/generic_text_size" />

        <!-- "Number of people?" field. -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/generic_view_vertical_margin"
            android:labelFor="@id/number_of_people_edit_text"
            android:text="@string/number_of_people_label"
            android:textSize="@dimen/generic_text_size" />

        <EditText
            android:id="@+id/number_of_people_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="5"
            android:hint="@string/positive_integer_hint"
            android:importantForAutofill="no"
            android:inputType="number" />

        <!-- "Slices per pizza?" field. -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/generic_view_vertical_margin"
            android:labelFor="@id/slices_per_pizza_edit_text"
            android:text="@string/slices_per_pizza_label"
            android:textSize="@dimen/generic_text_size" />

        <EditText
            android:id="@+id/slices_per_pizza_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="5"
            android:hint="@string/positive_integer_hint"
            android:importantForAutofill="no"
            android:inputType="number" />

        <!-- "How hungry?" field. -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/generic_view_vertical_margin"
            android:labelFor="@id/hungry_radio_group"
            android:text="@string/hungry_label"
            android:textSize="@dimen/generic_text_size" />

        <RadioGroup
            android:id="@+id/hungry_radio_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/light_radio_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:checked="true"
                android:text="@string/light_label" />

            <RadioButton
                android:id="@+id/medium_radio_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/medium_label" />

            <RadioButton
                android:id="@+id/ravenous_radio_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/ravenous_label" />

        </RadioGroup>

        <!-- "Pizza thickness" field. -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/generic_view_vertical_margin"
            android:labelFor="@id/pizza_thickness_radio_group"
            android:text="@string/pizza_thickness_label"
            android:textSize="@dimen/generic_text_size" />

        <RadioGroup
            android:id="@+id/pizza_thickness_radio_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/thin_radio_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:checked="true"
                android:text="@string/thin_label" />

            <RadioButton
                android:id="@+id/thick_radio_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/thick_label" />

        </RadioGroup>

        <!-- "How is your day going?" field. -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/generic_view_vertical_margin"
            android:labelFor="@id/day_rating_edit_text"
            android:text="@string/day_rating_label"
            android:textSize="@dimen/generic_text_size" />

        <EditText
            android:id="@+id/day_rating_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="5"
            android:hint="@string/day_rating_hint"
            android:importantForAutofill="no"
            android:inputType="number" />

        <!-- "Total pizzas" field. -->
        <TextView
            android:id="@+id/total_pizzas_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/generic_view_vertical_margin"
            android:text="@string/total_pizzas_empty_field"
            android:textSize="@dimen/generic_text_size" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/generic_view_vertical_margin"
            android:orientation="horizontal">

            <!-- "Dummy Values" button. -->
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/button_horizontal_margin"
                android:layout_weight="1"
                android:onClick="dummyValuesClick"
                android:text="@string/dummy_values_label" />

            <!-- "Reset" button. -->
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/button_horizontal_margin"
                android:layout_weight="1"
                android:onClick="resetClick"
                android:text="@string/reset_label" />

        </LinearLayout>

        <!-- "Calculate" button. -->
        <Button
            android:id="@+id/calc_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="calculateClick"
            android:text="@string/calculate_label" />

    </LinearLayout>

</ScrollView>